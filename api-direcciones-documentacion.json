{
  "api_direcciones_ejemplos": {
    
    "base_url": "http://localhost:3000/api/addresses",
    "autenticacion": "Bearer TOKEN_JWT",
    
    "endpoints": {
      
      "1_obtener_direcciones": {
        "metodo": "GET",
        "url": "/api/addresses",
        "descripcion": "Obtiene todas las direcciones del usuario autenticado",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT"
        },
        "respuesta_ejemplo": {
          "total": 2,
          "addresses": [
            {
              "uid": "64abc123def456789012345",
              "title": "Casa",
              "fullName": "María Pérez",
              "phone": "+57 300 123 4567",
              "address": "Calle 45 #12-34, Apto 501",
              "city": "Medellín",
              "state": "Antioquia",
              "country": "Colombia",
              "postalCode": "050001",
              "neighborhood": "El Poblado",
              "instructions": "Portería blanca, timbre 501",
              "isDefault": true,
              "coordinates": {
                "latitude": 6.2442,
                "longitude": -75.5812
              },
              "user": {
                "firstName": "María",
                "lastName": "Pérez"
              },
              "createdAt": "2025-11-06T10:00:00.000Z",
              "updatedAt": "2025-11-06T10:00:00.000Z"
            }
          ]
        }
      },

      "2_obtener_direccion_especifica": {
        "metodo": "GET",
        "url": "/api/addresses/:id",
        "descripcion": "Obtiene una dirección específica por ID",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT"
        }
      },

      "3_obtener_direccion_predeterminada": {
        "metodo": "GET", 
        "url": "/api/addresses/default",
        "descripcion": "Obtiene la dirección predeterminada del usuario",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT"
        }
      },

      "4_crear_direccion": {
        "metodo": "POST",
        "url": "/api/addresses",
        "descripcion": "Crea una nueva dirección",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT",
          "Content-Type": "application/json"
        },
        "body_ejemplo": {
          "title": "Oficina",
          "fullName": "Juan Carlos Rodríguez",
          "phone": "+57 311 987 6543",
          "address": "Carrera 70 #23-45, Torre B, Piso 12",
          "city": "Bogotá",
          "state": "Cundinamarca",
          "country": "Colombia",
          "postalCode": "110111",
          "neighborhood": "Zona Rosa",
          "instructions": "Preguntar en recepción por Juan Carlos",
          "isDefault": false,
          "coordinates": {
            "latitude": 4.6482,
            "longitude": -74.0648
          }
        }
      },

      "5_actualizar_direccion": {
        "metodo": "PUT",
        "url": "/api/addresses/:id",
        "descripcion": "Actualiza una dirección existente",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT",
          "Content-Type": "application/json"
        },
        "body_ejemplo": {
          "title": "Casa Principal",
          "fullName": "María Pérez García",
          "phone": "+57 300 123 4567",
          "address": "Calle 45 #12-34, Apto 501",
          "city": "Medellín",
          "state": "Antioquia",
          "country": "Colombia",
          "neighborhood": "El Poblado",
          "instructions": "Portería blanca, timbre 501. Dejar con portero"
        }
      },

      "6_establecer_predeterminada": {
        "metodo": "PATCH",
        "url": "/api/addresses/:id/default",
        "descripcion": "Establece una dirección como predeterminada",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT"
        }
      },

      "7_eliminar_direccion": {
        "metodo": "DELETE",
        "url": "/api/addresses/:id",
        "descripcion": "Elimina una dirección (soft delete)",
        "headers": {
          "Authorization": "Bearer TU_TOKEN_JWT"
        }
      }
    }
  },

