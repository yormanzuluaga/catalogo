  "NOTAS_IMPORTANTES": {
    "campos_requeridos": [
      "name (único)",
      "brand (ObjectId de marca existente)", 
      "user (se toma automáticamente del token JWT)",
      "productType ('simple' o 'variant')",
      "category O subCategory (uno de los dos, no ambos)"
    ],
    "validaciones": [
      "Si productType es 'simple', usar el objeto simpleProduct para precios y stock",
      "Si productType es 'variant', usar el array variants con al menos una variante",
      "Los SKUs de las variantes deben ser únicos",
      "Las ganancias se calculan automáticamente (profit.amount y profit.percentage)",
      "Debe tener category O subCategory, no ambos al mismo tiempo"
    ],
    "imagenes": [
      "img: imagen principal del producto",
      "images: array de imágenes adicionales generales",
      "variants[].images: imágenes específicas de cada variante"
    ],
    "precios": [
      "costPrice: precio de costo",
      "salePrice: precio de venta",
      "commission: comisión para vendedoras",
      "profit: se calcula automáticamente"
    ]
  },

  "EJEMPLOS_ENDPOINTS": {
    "crear_producto_simple": {
      "metodo": "POST",
      "url": "/api/products",
      "headers": {
        "Authorization": "Bearer TOKEN_JWT",
        "Content-Type": "application/json"
      },
      "body": "usar PRODUCTO_SIMPLE.ejemplo sin el campo _id"
    },
    "crear_producto_variante": {
      "metodo": "POST", 
      "url": "/api/products",
      "headers": {
        "Authorization": "Bearer TOKEN_JWT",
        "Content-Type": "application/json"
      },
      "body": "usar PRODUCTO_CON_VARIANTES.ejemplo sin el campo _id"
    }
  }
